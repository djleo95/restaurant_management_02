<section id="contact" class="parallax-section">
  <div class="container">
    <div class="row details-1">
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>
      <div class="col-md-offset-1 col-md-10 col-sm-12 text-center">
        <h1 class="heading"><%= t "bill.title" %></h1>
      </div>
      <div class="col-md-offset-1 col-md-10 col-sm-12">
        <% if @target_type == "Guest" %>
          <%= render "guest" %>
        <% elsif @target_type == "User" %>
          <%= render "user" %>
        <% elsif @target_type == "none" %>
          <%= form_for [:admin, @bill], url: new_admin_bill_path, method: :get do |f| %>
            <%= f.select :target_type do %>
              <% @select.each do |c| -%>
                <%= content_tag(:option, c.first, value: c.first) %>
              <% end %>
            <% end %>
            <%= f.submit "OK", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</section>
